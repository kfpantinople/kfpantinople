<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context="com.example.joxxxx.footscapes.HomeUI">

    <Button
        android:id="@+id/menuButton"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/menufinal"
        android:onClick="buttonclick"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RelativeLayout
        android:layout_width="388dp"
        android:layout_height="515dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">



        <Button
            android:id="@+id/startbtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="buttonclick"
            android:text="START"
            android:textSize="22dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/btnpretest"
            android:layout_alignStart="@+id/btnpretest" />

        <Button
            android:id="@+id/btnpretest"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="buttonclick"
            android:text="I AM FICKLE"
            android:textSize="22dp"
            android:layout_below="@+id/menuButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="205dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
