<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.joxxxx.footscapes.LoginUI">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView_usr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="36dp"
            android:text="Username:" />

        <TextView
            android:id="@+id/textView_psd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_usr"
            android:layout_below="@+id/username"
            android:layout_marginTop="23dp"
            android:text="Password:" />

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_usr"
            android:layout_alignBottom="@+id/textView_usr"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/textView_usr"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_psd"
            android:layout_alignBottom="@+id/textView_psd"
            android:layout_alignStart="@+id/username"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/forgotpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonclicker"
            android:text="Forgot Password?"
            android:layout_above="@+id/button_logn"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/button_logn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonclicker"
            android:text="LOG IN"
            android:layout_above="@+id/textView9"
            android:layout_alignStart="@+id/button_register" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not connected yet?"
            android:layout_above="@+id/button_register"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonclicker"
            android:text="REGISTER"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
