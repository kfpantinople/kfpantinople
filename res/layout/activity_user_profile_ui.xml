<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.joxxxx.footscapes.UserProfileUI">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="36dp">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="25dp"
            android:text="Name" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView21"
            android:layout_below="@+id/textView21"
            android:layout_marginTop="12dp"
            android:text="Age" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView24"
            android:layout_below="@+id/textView24"
            android:layout_marginTop="11dp"
            android:text="Mobile Number" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView25"
            android:layout_below="@+id/textView25"
            android:layout_marginTop="25dp"
            android:text="TEMPERAMENT:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="320dp"
            android:layout_height="300dp"
            android:layout_below="@+id/textView26"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:text="General Characteristics: They are the thinkers and organizers. They feel that there is a right way to do everything and usually have a high degree of perfectionistic tendencies. Their personalities are very creative. They desire to solve everything and to take their time and do it right. They do not like sudden changes and need reassurance.\n\nBiblical Example: Moses \nCase Study: Exodus 3-4 \nStrength: High standards, order, respect \nPossible Weaknesses: Unrealistic expectations of self and others, too perfect. \nLimitation: Seeing the optimistic side of things, expressing flexibility" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
