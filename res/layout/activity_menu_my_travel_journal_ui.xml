<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.joxxxx.footscapes.MenuMyTravelJournalUI">


    <RelativeLayout
        android:layout_width="385dp"
        android:layout_height="510dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView36"
            android:layout_width="350dp"
            android:layout_height="50sp"
            android:layout_alignStart="@+id/textView19"
            android:layout_below="@+id/textView23"
            android:layout_marginTop="20dp"
            android:text="Posttest Score:"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/traveljournal"
            android:layout_marginBottom="349dp"
            android:layout_marginTop="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="168dp"
            android:textSize="30dp"
            android:text="BANTAYAN ISLAND"
            android:layout_marginStart="17dp"
            android:layout_alignTop="@+id/imageView6"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="350dp"
            android:layout_height="50sp"
            android:layout_marginTop="15dp"
            android:text="Pretest Score: "
            android:textSize="20dp"
            android:layout_below="@+id/textView19"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:text="It’s seriously one of the nicest beaches I’ve been to. I googled the island before actually going so I really expected to see some clear water and a breath taking sight. When I arrived, it turns out Bantayan Island is 10x better in real life than in photos. I was lost for words- and I still am. "
            android:layout_below="@+id/textView36"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
