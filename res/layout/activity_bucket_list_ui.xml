<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.joxxxx.footscapes.BucketListUI">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="25dp"
            android:text="BUCKET LIST"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView62"
            android:layout_below="@+id/textView62"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="63dp"
            android:onClick="buttonclick"
            android:text="Biking" />

        <Button
            android:id="@+id/button16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button15"
            android:layout_alignBottom="@+id/button15"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/button15"
            android:onClick="buttonclick"
            android:text="Camping" />

        <Button
            android:id="@+id/button17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button15"
            android:layout_below="@+id/button15"
            android:layout_marginTop="36dp"
            android:onClick="buttonclick"
            android:text="Trekking" />

        <Button
            android:id="@+id/button18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button16"
            android:layout_alignTop="@+id/button17"
            android:onClick="buttonclick"
            android:text="Swimming" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/button17"
            app:srcCompat="@drawable/heart"
            android:layout_alignStart="@+id/button18" />

        <Button
            android:id="@+id/btnpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_alignStart="@+id/textView62"
            android:layout_marginBottom="44dp"
            android:layout_toStartOf="@+id/imageView9"
            android:onClick="buttonclick"
            android:text="Take PostTest" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
