<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.example.joxxxx.footscapes.PreTestUI">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView69"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:text="PRE TEST QUESTIONNAIRE"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/pplanes" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Instruction"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Below are a number of statements about happiness. Please indicate how much you agree or disagree with each by choosing a number in the choices provided." />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Please refer to the scale below:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="1 = strongly disagree\n2 = moderately disagree\n3 = slightly disagree\n4 = slightly agree\n5 = moderately agree\n6 = strongly agree" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="The Oxford Happiness Questionnaire"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="1. I am intensely interested in other people."
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/et1"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint="Answer"
                    android:inputType="number"
                    android:maxLength="1" />


            </LinearLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="2. I feel that life is very rewarding."
                android:textSize="17dp" />


                <EditText
                    android:id="@+id/et2"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Answer"
                    android:layout_marginLeft="20dp"
                    android:maxLength="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="3. I have very warm feelings towards almost everyone."
                    android:textSize="17dp"/>


            <EditText
                android:id="@+id/et3"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Answer"
                android:layout_marginLeft="20dp"
                android:maxLength="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="4. I find most things amusing."
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/et4"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Answer"
                android:layout_marginLeft="20dp"
                android:maxLength="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="5. I am always committed and involved."
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/et5"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Answer"
                android:layout_marginLeft="20dp"
                android:maxLength="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="6. Life is good."
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/et6"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Answer"
                android:layout_marginLeft="20dp"
                android:maxLength="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="7. I laugh a lot."
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/et7"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Answer"
                android:layout_marginLeft="20dp"
                android:maxLength="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="8. I am well satisfied about everything in my life."
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/et8"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Answer"
                android:layout_marginLeft="20dp"
                android:maxLength="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="9. I am very happy."
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/et9"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Answer"
                android:layout_marginLeft="20dp"
                android:maxLength="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="10. I find beauty in some things."
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/et10"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Answer"
                android:layout_marginLeft="20dp"
                android:maxLength="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="11. I always have a cheerful effect on others."
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/et11"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Answer"
                android:layout_marginLeft="20dp"
                android:maxLength="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="12. I can fit in (find time for) everything I want to."
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/et12"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Answer"
                android:layout_marginLeft="20dp"
                android:maxLength="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="13. I feel able to take anything on."
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/et13"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Answer"
                android:layout_marginLeft="20dp"
                android:maxLength="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="14. I feel fully mentally alert."
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/et14"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Answer"
                android:layout_marginLeft="20dp"
                android:maxLength="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="15. I often experience joy and elation."
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/et15"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Answer"
                android:layout_marginLeft="20dp"
                android:maxLength="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:onClick="buttonclick"
                        android:text="SUBMIT" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
